{
  "name": "bs-jest",
  "version": "0.1.0",
  "description": "BuckleScript bindings to the Jest testing framework",
  "scripts": {
    "start": "bsb -make-world -w",
    "build": "bsb -make-world",
    "test": "npm run build && jest",
    "watch:bsb": "bsb -make-world -w",
    "watch:jest": "npm run build && jest --watchAll"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BuckleTypes/bs-jest.git"
  },
  "keywords": [
    "jest",
    "bucklescript",
    "test"
  ],
  "author": "glennsl",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BuckleTypes/bs-jest/issues"
  },
  "homepage": "https://github.com/BuckleTypes/bs-jest#readme",
  "devDependencies": {
    "bs-platform": "bloomberg/bucklescript"
  },
  "dependencies": {
    "bs-loader": "^1.5.1",
    "jest": "^19.0.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ml"
    ],
    "transform": {
      ".(re|ml)": "bs-loader"
    }
  }
}
