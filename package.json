{
  "name": "bs-jest",
  "version": "0.1.0",
  "description": "BuckleScript bindings to the Jest testing framework",
  "scripts": {
    "start": "bsb -make-world -w",
    "build": "bsb -make-world",
    "test": "npm run build && jest",
    "watch:bsb": "bsb -make-world -w",
    "watch:jest": "jest --watchAll",
    "watch:screen": "screen -c .screenrc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reasonml-community/bs-jest.git"
  },
  "keywords": [
    "jest",
    "bucklescript",
    "test"
  ],
  "author": "glennsl",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/reasonml-community/bs-jest/issues"
  },
  "homepage": "https://github.com/reasonml-community/bs-jest#readme",
  "devDependencies": {
    "bs-platform": "^1.8.2"
  },
  "dependencies": {
    "jest": "^19.0.2"
  }
}
